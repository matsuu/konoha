#!/usr/local/bin/konoha

import "./src/check.k";
import "./src/init.k";
import "./src/import.k";

void helloKlip(String code)
{
	ins = new InputStream("./sys/hello.klip","r");
	foreach( String txt from ins ) {
		if ( txt[0] in? code  || txt.startsWith("*") ) {
			txt = txt[2..];
			OUT.println(txt);
		}
	}
	ins.close();
}

//*-----main-----
int main (String[] args)
{
 	if ( |args| > 1 ) {
		if ( do_klip.indexOf("#") == -1 ) {
			return klipMain(args); 
		}
	} else {
		klipInfo("u");
	}
	helloKlip(do_klip);
	return 0;
}
