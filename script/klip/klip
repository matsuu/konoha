/*-----main-----*/
int  main (String[] args)
{
    int ret;
    if ( |args| >= 2 && |args| <= 4 ){
        ret = klipOperation(args);
    } else {
        dispError("usage",SHOW);
        return EXIT_ERROR;
    }
    return endOfKlip(ret);
}

