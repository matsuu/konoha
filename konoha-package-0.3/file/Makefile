# Makefile for konoha package
# This makefile is generated by gen_pkgmake.k
# shinpei(c)2009

CC = gcc
CFLAGS = -O2 -Wall -fmessage-length=0
LDLIBS = -lkonoha 
library = file.so
.PHONY: all
all: $(library)

objs = file.o
file.o: file.c
	$(CC) $(CFLAGS) -o $@ -c $^
$(library): $(objs)
	$(CC) -shared -Wl -o $@ $^ $(LDLIBS)
.PHONY: clean
clean:
	$(RM) -rf $(objs) $(library)

.PHONY: konoha_install
konoha_install: $(library)
	mkdir -p .konoha/file
	cp $(library) .konoha/file
	cp file.k .konoha/file
