# Makefile for konoha package
# This makefile is generated by gen_pkgmake.k
# shinpei(c)2009

CC = gcc
CFLAGS = -O2 -Wall -fmessage-length=0 -I/usr/include/lua5.1
LDLIBS = -lkonoha -llua5.1
library = lua.so
.PHONY: all
all: $(library)

objs = lua.o
lua.o: lua.c
	$(CC) $(CFLAGS) -o $@ -c $^
$(library): $(objs)
	$(CC) -shared -Wl -o $@ $^ $(LDLIBS)
.PHONY: clean
clean:
	$(RM) -rf $(objs) $(library)

.PHONY: konoha_install
konoha_install: $(library)
	mkdir -p .konoha/lua
	cp $(library) .konoha/lua
	cp lua.k .konoha/lua
